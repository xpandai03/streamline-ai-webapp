# =================================
# BACKEND ENVIRONMENT VARIABLES
# =================================

# Public Base URL (for clip URLs)
# Local: http://localhost:3000
# Production: https://your-vercel-app.vercel.app
PUBLIC_BASE_URL=http://localhost:3000

# Job TTL (Time To Live) in minutes - how long to keep completed/failed jobs
JOB_TTL_MINUTES=120

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Email Configuration (Gmail) - Optional
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password_here

# Application URL (for email links)
# Local: http://localhost:3000
# Production: https://your-vercel-app.vercel.app
APP_URL=http://localhost:3000

# Clipping Configuration
NUM_CLIPS=3
CLIP_LENGTH_MIN=30
CLIP_LENGTH_MAX=60

# Caption Configuration
CAPTION_COLOR=#FFD600
CAPTION_FONT=Impact

# Video Framing (set to true for blurred background fill like CapCut)
USE_BLUR_BACKGROUND=false

# Debug Mode
DEBUG=true

# Skip Email Delivery (useful for testing)
SKIP_EMAIL=true

# Port (Render auto-detects, but explicit is better)
PORT=3001

# Highlight Detection Mode (set to true to use GPT, false for deterministic heuristics)
# false = instant detection, no GPT API calls, no stalls
# true = AI-powered detection, requires OpenAI credits, may be slower
USE_GPT_HIGHLIGHTS=false

# n8n Webhook URL (optional - will POST job completion events)
# Example: https://webhook.site/your-unique-id
N8N_WEBHOOK_URL=

# Node environment
NODE_ENV=development

# =================================
# FRONTEND ENVIRONMENT VARIABLES
# =================================

# Next.js API URL (for frontend to backend communication)
# Local: http://localhost:3001
# Production: https://your-render-service.onrender.com
NEXT_PUBLIC_API_URL=http://localhost:3001
