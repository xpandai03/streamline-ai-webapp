# Public Base URL (for clip URLs - set to your Render domain in production)
PUBLIC_BASE_URL=http://localhost:3002

# Job TTL (Time To Live) in minutes - how long to keep completed/failed jobs
JOB_TTL_MINUTES=120

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Email Configuration (Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password_here

# Application URL (for email links)
APP_URL=http://localhost:3000

# Clipping Configuration
NUM_CLIPS=3
CLIP_LENGTH_MIN=30
CLIP_LENGTH_MAX=60

# Caption Configuration
CAPTION_COLOR=#FFD600
CAPTION_FONT=Impact

# Video Framing
USE_BLUR_BACKGROUND=false

# Debug Mode
DEBUG=false

# Skip Email Delivery (useful for testing)
SKIP_EMAIL=false

# Port (optional)
PORT=3001

# Highlight Detection Mode (set to true to use GPT, false for deterministic heuristics)
USE_GPT_HIGHLIGHTS=false

# n8n Webhook URL (optional - will POST job completion events)
N8N_WEBHOOK_URL=
